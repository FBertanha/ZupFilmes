<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.DetalhesActivity">

    <ImageView
        android:id="@+id/detalhes_imagem"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_broken_image_accent_24dp" />

    <TextView
        android:id="@+id/detalhes_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="@dimen/font_size_normal"
        app:layout_constraintBottom_toTopOf="@+id/detalhes_ano"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detalhes_imagem"
        app:layout_constraintTop_toTopOf="@+id/detalhes_imagem"
        app:layout_constraintVertical_bias="0.17000002"
        tools:text="Pulp Fiction" />

    <TextView
        android:id="@+id/detalhes_ano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_pequena"
        app:layout_constraintBottom_toTopOf="@+id/detalhes_nota"
        app:layout_constraintStart_toStartOf="@+id/detalhes_nota"
        tools:text="1998" />

    <TextView
        android:id="@+id/detalhes_nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_pequena"
        app:layout_constraintBottom_toTopOf="@+id/detalhes_diretor"
        app:layout_constraintStart_toStartOf="@+id/detalhes_diretor"
        tools:text="9.5/10" />

    <TextView
        android:id="@+id/detalhes_diretor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="@dimen/font_size_pequena"
        app:layout_constraintBottom_toTopOf="@+id/detalhes_favoritar"
        app:layout_constraintStart_toEndOf="@+id/detalhes_imagem"
        tools:text="Quentin Tarantino" />

    <TextView
        android:id="@+id/detalhes_resumo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="@dimen/font_size_pequena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/detalhes_imagem"
        app:layout_constraintTop_toBottomOf="@+id/detalhes_imagem"
        tools:text="@tools:sample/lorem" />

    <Button
        android:id="@+id/detalhes_favoritar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:text="Favoritar"
        app:layout_constraintBottom_toBottomOf="@+id/detalhes_imagem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detalhes_imagem" />

</androidx.constraintlayout.widget.ConstraintLayout>